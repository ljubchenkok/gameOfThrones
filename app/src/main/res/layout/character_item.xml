<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/iv_character_icon"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/lanister_icon"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_character_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/iv_character_icon"
        android:fontFamily="sans-serif"
        android:textColor="@color/color_gray_dark"
        android:textSize="18sp"
        tools:text="John Snow" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_character_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_character_name"
        android:layout_marginLeft="@dimen/spacing_normal_16"
        android:layout_marginRight="@dimen/spacing_normal_16"
        android:layout_toEndOf="@+id/iv_character_icon"
        android:fontFamily="sans-serif"
        android:maxLines="2"
        android:textSize="14sp"
        android:ellipsize="end"
        tools:text="Lord Snow•Ned Stark's Bastard•The Snow of Winterfell•The Crow-Come-Over•The 998th Lord Commander of the Night's Watch•The Bastard of Winterfell•The Black Bastard of the Wall•Lord Crow" />




</RelativeLayout>